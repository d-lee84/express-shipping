{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/shipmentSchema.json",
  "title": "Shipment",
  "description": "Shipment Information",
  "type": "object",
  "properties": {
    "productIds": {
      "type": "array",
      "items": [
        { 
          "type": "integer",
          "minimum": 1000
        }
      ]
    },
    "name": {
      "type": "string"
    },
    "addr": {
      "type": "string"
    },
    "zip": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "productIds",
    "name",
    "addr",
    "zip"
  ]
}